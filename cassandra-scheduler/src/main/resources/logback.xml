<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>*|1|%p|%X{ENV:MESOS_TASK_ID}|%X{PID}|%X{ENV:MON_GROUP}|%X{ENV:MON_APP}|cassandra|%X{ENV:MON_CORELATIONID:-0}|%C:%L|%d{yyyy/MM/dd HH:mm:ss.SSS}|%m%n</pattern>
        </encoder>
    </appender>

    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>*|1|%p|%X{ENV:MESOS_TASK_ID}|%X{PID}|%X{ENV:MON_GROUP}|%X{ENV:MON_APP}|cassandra|%X{ENV:MON_CORELATIONID:-0}|%C:%L|%d{yyyy/MM/dd HH:mm:ss.SSS}|%m%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDERR" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>